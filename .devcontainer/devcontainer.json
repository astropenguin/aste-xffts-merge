{
    "name": "Python 3.8",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
    },
    "extensions": [
        "ms-python.python",
    ],
    "settings": {
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "python.languageServer": "Pylance",
        "python.linting.enabled": true,
        "python.linting.lintOnSave": true,
        "python.linting.flake8Enabled": true,
    },
}
